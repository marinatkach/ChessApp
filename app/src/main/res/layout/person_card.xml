<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="8dp"
    android:foregroundTint="#EA0C0C">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/personNameTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Willhelm Stein" />

        <TextView
            android:id="@+id/personInfoText"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:justificationMode="inter_word"
            android:text="@string/history_willam1"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/personImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:maxHeight="270dp"
            android:scaleType="fitCenter"
            tools:srcCompat="@drawable/history_17_magnus_carlsen" />

        <TextView
            android:id="@+id/personCitate"
            android:gravity="center"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/history_willam2" />
    </LinearLayout>
</androidx.cardview.widget.CardView>